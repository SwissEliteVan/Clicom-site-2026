---
const { items } = Astro.props;
---
<div class="space-y-4">
  {items.map((item) => (
    <details class="rounded-2xl border border-black/10 px-5 py-4">
      <summary class="cursor-pointer text-sm font-semibold text-ink">
        {item.question}
      </summary>
      <p class="mt-3 text-sm text-black/70">{item.answer}</p>
    </details>
  ))}
</div>
